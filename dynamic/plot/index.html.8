<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>3D Scatter Plot</title>
  <style>
    body { margin: 0; overflow: hidden; }
    canvas { display: block; }
    #tooltip {
      position: absolute;
      background: rgba(0,0,0,0.75);
      color: white;
      padding: 5px;
      font-size: 12px;
      pointer-events: none;
      display: none;
      border-radius: 4px;
    }
  </style>

  <!-- All necessary scripts, fully specified -->
  <script src="https://cdn.jsdelivr.net/npm/three@0.145.0/build/three.min.js"></script>
  <script src="https://unpkg.com/three@0.145.0/examples/js/controls/OrbitControls.js"></script>
  <script src="https://unpkg.com/three@0.145.0/examples/js/loaders/FontLoader.js"></script>
  <script src="https://unpkg.com/three@0.145.0/examples/js/geometries/TextGeometry.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/d3@6.7.0/dist/d3.min.js"></script>
</head>
<body>
<div id="tooltip"></div>
<script>
try {
  const data = %DATA%;
  const fontData = JSON.parse(atob(`%FONTJSON%`));

  const scene = new THREE.Scene();
  scene.background = new THREE.Color(0xe0e0e0);

  const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
  camera.position.set(12, 12, 12);

  const renderer = new THREE.WebGLRenderer({ antialias: true });
  renderer.setSize(window.innerWidth, window.innerHeight);
  document.body.appendChild(renderer.domElement);

  const controls = new THREE.OrbitControls(camera, renderer.domElement);
  controls.update();

  const size = 12;
  const divisions = 12;
  const gridXZ = new THREE.GridHelper(size, divisions);
  gridXZ.position.set(size/2, 0, size/2);
  scene.add(gridXZ);

  const gridXY = new THREE.GridHelper(size, divisions);
  gridXY.rotation.x = Math.PI / 2;
  gridXY.position.set(size/2, size/2, 0);
  scene.add(gridXY);

  const gridYZ = new THREE.GridHelper(size, divisions);
  gridYZ.rotation.z = Math.PI / 2;
  gridYZ.position.set(0, size/2, size/2);
  scene.add(gridYZ);

  const tooltip = document.getElementById('tooltip');
  let mouseX = 0, mouseY = 0;
  const raycaster = new THREE.Raycaster();
  const mouse = new THREE.Vector2();
  let INTERSECTED = null;

  window.addEventListener('mousemove', function (event) {
    mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
    mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;
    mouseX = event.clientX;
    mouseY = event.clientY;
  });

  const maxIpc = Math.max(...data.nodes.map(d => d.ipc));
  const maxArea = Math.max(...data.nodes.map(d => d.area));
  const maxPower = Math.max(...data.nodes.map(d => d.power));
  const scoreRange = d3.extent(data.nodes.map(d => d.score));
  const colorScale = d3.scaleSequential(d3.interpolateViridis).domain(scoreRange);

  const geometry = new THREE.SphereGeometry(0.1, 16, 16);
  const points = [];
  const pointGroup = new THREE.Group();

  data.nodes.forEach(node => {
    const material = new THREE.MeshBasicMaterial({ color: new THREE.Color(colorScale(node.score)) });
    const sphere = new THREE.Mesh(geometry, material);
    sphere.position.set(
      (node.ipc / maxIpc) * 10,
      (node.area / maxArea) * 10,
      (node.power / maxPower) * 10
    );
    sphere.userData = node;
    pointGroup.add(sphere);
    points.push(sphere);
  });

  scene.add(pointGroup);

  const font = new THREE.Font(fontData);

  function addLabel(text, x, y, z, rx = 0, ry = 0, rz = 0) {
    const textGeo = new THREE.TextGeometry(text, {
      font: font,
      size: 0.6,
      height: 0.05
    });
    const mat = new THREE.MeshBasicMaterial({ color: 0x000000 });
    const mesh = new THREE.Mesh(textGeo, mat);
    mesh.position.set(x, y, z);
    mesh.rotation.set(rx, ry, rz);
    scene.add(mesh);
  }

  const pi_d2 = Math.PI / 2;

  //                 x     y     z   rx      ry    rz
  addLabel("IPC",  10.5,  0.5,  0.0, 0,      0,     0);
  addLabel("Area",  0.0, 10.5,  2.0, 0,      pi_d2, 0);
  addLabel("Power", 0.5,  0.5, 11.5, -pi_d2, pi_d2, pi_d2);

  function animate() {
    requestAnimationFrame(animate);
    controls.update();

    raycaster.setFromCamera(mouse, camera);
    const intersects = raycaster.intersectObjects(points);

    if (intersects.length > 0) {
      const hit = intersects[0].object;
      if (INTERSECTED !== hit) {
        INTERSECTED = hit;
        const d = hit.userData;
        tooltip.innerHTML =
          `<b>${d.id}</b><br>` +
          `IPC: ${d.ipc}<br>` +
          `Area: ${d.area}<br>` +
          `Power: ${d.power}<br>` +
          `Score: ${d.score}`;
        tooltip.style.display = 'block';
      }
      tooltip.style.left = mouseX + 10 + 'px';
      tooltip.style.top = mouseY + 10 + 'px';
      document.body.style.cursor = 'pointer';
    } else {
      INTERSECTED = null;
      tooltip.style.display = 'none';
      document.body.style.cursor = 'crosshair';
    }

    renderer.render(scene, camera);
  }

  animate();
} catch (e) {
  console.error("‚ùå ERROR: Could not parse or inject data:", e);
}
</script>
</body>
</html>

