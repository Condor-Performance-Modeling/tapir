  // Axis labels

const loader = new THREE.FontLoader();
const fileLoader = new THREE.FileLoader();

fileLoader.load('helvetiker_regular.typeface.json', function (response) {
  const font = loader.parse(JSON.parse(response));
  console.log("âœ… Font loaded manually via FileLoader");

  function addLabel(text, x, y, z) {
    const textGeo = new THREE.TextGeometry(text, {
      font: font,
      size: 0.6,
      height: 0.05
    });
    const mat = new THREE.MeshBasicMaterial({ color: 0x000000 });
    const mesh = new THREE.Mesh(textGeo, mat);
    mesh.position.set(x, y, z);
    scene.add(mesh);
  }

  addLabel("IPC",   10.5, 0.5, 0.5);
  addLabel("Area",  0.5, 10.5, 0.5);
  addLabel("Power", 0.5, 0.5, 10.5);
});

//  const loader = new THREE.FontLoader();
